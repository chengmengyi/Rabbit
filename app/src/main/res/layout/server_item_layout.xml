<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/server_item_selector">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_server_country"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/icon_fast"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_server_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="Super Fast Servers"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_select"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/server_item_icon_selector"/>
</androidx.appcompat.widget.LinearLayoutCompat>