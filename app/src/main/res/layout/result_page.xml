<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCAA46">
    <View
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/back"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_view"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Result"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_result_bg"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:src="@drawable/result_bg"
        android:scaleType="fitXY"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        app:layout_constraintTop_toBottomOf="@id/iv_back"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@id/iv_result_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_result_bg"
        app:layout_constraintRight_toRightOf="@id/iv_result_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_result_bg">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_fast"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="28dp"
            android:text="Connection succeed"
            android:textColor="@drawable/result_color_selector"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <include android:layout_width="match_parent"
        android:layout_height="328dp"
        layout="@layout/result_native_ad"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>